<form id="post" class="card w-75 mx-auto my-2">
    <div class="card-header">
        <h3>Title</h3>
        <input type="text" id="title" value="{{post.title}}" />
    </div>
    <div class="card-body">
        <h3>Content</h3>
        <textarea name="post-content" cols="112" rows="7" class="w-100 card-text">{{post.post_content}}</textarea>
    </div>
    <div class="d-flex justify-content-around pb-3">
        <button type="submit" class="btn bg-warning">Save!</button>
    </div>
</form>

{{#if post.comments}}
<div class="card w-75 mx-auto my-2">
    <h4 class="card-header">Comments</h4>
    <ul class="list-group list-group-flush">
        {{#each post.comments}}
        <li class="list-group-item">
            <p>{{comment_text}}</p>
            <p class="text-secondary">Posted on {{format_date created_at}} by {{user.username}}</p>
        </li>
        {{/each}}
    </ul>
</div>
{{/if}}

<div class="d-flex justify-content-center mb-2">
    <a role="button" id="delete-btn" class="btn bg-danger">Delete this post.</a>
</div>

<script src="/javascript/edit-post.js"></script>