<div class="card w-75 mx-auto my-2">
    <div class="card-header">
        <h2 class="card-title">{{post.title}}</h2>
        <h5 class="card-subtitle text-secondary">Posted on {{format_date post.created_at}} by {{post.user.username}}</h5>
    </div>
    <div class="card-body">
        <p class="card-text my-2">{{post.post_content}}</p>
    </div> 
</div>

{{#if post.comments}}
<div class="card w-75 mx-auto my-2">
    <h4 class="card-header">Comments</h4>
    <ul class="list-group list-group-flush">
        {{#each post.comments}}
        <li class="list-group-item">
            <p>{{comment_text}}</p>
            <p class="text-secondary">Posted on {{format_date created_at}} by {{user.username}}</p>
        </li>
        {{/each}}
    </ul>
</div>
{{/if}}

{{#if loggedIn}}
<form class="d-flex justify-content-center" id="comment-form">
    <textarea id="comment-text" cols="75" placeholder="Leave a comment."></textarea>
    <button type="submit" class="btn btn-warning mx-2">Post it!</button>
</form>
<script src="/javascript/add-comment.js"></script>
{{/if}}